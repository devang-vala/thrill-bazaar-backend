model Otp {
  id        String   @id @default(uuid()) @map("otp_id")
  phone     String   @map("phone_number")
  otp       String   @map("otp_code")
  expiresAt DateTime @map("expires_at")
  verified  Boolean  @default(false) @map("is_verified")
  attempts  Int      @default(0) @map("verification_attempts")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([phone])
  @@index([phone, verified])
  @@map("otps")
}