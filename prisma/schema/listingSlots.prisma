model ListingSlot {
    id                     String      @id @default(uuid()) @map("slot_id")
    listingId              String      @map("listing_id")
    variantId              String?     @map("variant_id")  
    primaryContactPhone    String?     @map("primary_contact_phone")
    secondaryContactPhone  String?     @map("secondary_contact_phone")
    formatType             BookingFormat @map("format_type")  
    batchStartDate         DateTime    @map("batch_start_date")
    batchStartTime         DateTime?   @map("batch_start_time")
    batchEndDate           DateTime    @map("batch_end_date")
    batchEndTime           DateTime?   @map("batch_end_time")
    basePrice              Int         @map("base_price") 
    totalCapacity          Int         @map("total_capacity")  
    availableCount         Int         @map("available_count")
    isActive               Boolean     @default(true) @map("is_active")
    createdAt              DateTime    @default(now()) @map("created_at")
    updatedAt              DateTime    @updatedAt @map("updated_at")

    listing       Listing              @relation(fields: [listingId], references: [id], onDelete: Cascade)
    variant       ListingVariant?      @relation(fields: [variantId], references: [id], onDelete: Cascade)
    slotChanges   ListingSlotChange[]  

    @@map("listing_slots")
}