model Listing {
    id                 String         @id @default(uuid()) @map("listing_id")
    operatorId         String?        @map("operator_id")
    categoryId         String?        @map("category_id")
    subCatId           String?        @map("sub_cat_id")
    listingName        String?        @map("listing_name")
    listingSlug        String?        @unique @map("listing_slug")
    tbaId              String?        @map("tba_id")
    frontImageUrl      String?        @map("front_image_url")
    bookingFormat      BookingFormat? @map("booking_format")
    hasMultipleOptions Boolean       @default(false) @map("has_multiple_options")
    status             ListingStatus @default(draft)
    createdAt          DateTime      @default(now()) @map("created_at")
    updatedAt          DateTime      @updatedAt @map("updated_at")
    approvedByAdminId  String?       @map("approved_by_admin_id")
    approvedAt         DateTime?     @map("approved_at")
    rejectionReason    String?       @map("rejection_reason")

    // Location Fields
    startCountryId           String? @map("start_country_id")
    startPrimaryDivisionId   String? @map("start_primary_division_id")
    startSecondaryDivisionId String? @map("start_secondary_division_id")
    endCountryId             String? @map("end_country_id")
    endPrimaryDivisionId     String? @map("end_primary_division_id")
    endSecondaryDivisionId   String? @map("end_secondary_division_id")
    startLocationName        String? @map("start_location_name")
    startLocationCoordinates String? @map("start_location_coordinates")
    startGoogleMapsUrl       String? @map("start_google_maps_url")
    endLocationName          String? @map("end_location_name")
    endLocationCoordinates   String? @map("end_location_coordinates")
    endGoogleMapsUrl         String? @map("end_google_maps_url")

    // Pricing Fields
    taxRate                  Decimal @default(0.00) @map("tax_rate") @db.Decimal(5, 2)
    advanceBookingPercentage Decimal @default(25.00) @map("advance_booking_percentage") @db.Decimal(5, 2)
    basePriceDisplay         Decimal @default(0.00) @map("base_price_display") @db.Decimal(10, 2)
    currency                 String  @default("INR")

    // Relations
    operator             User?                       @relation(fields: [operatorId], references: [id], onDelete: Cascade)
    category             Category?                   @relation(fields: [categoryId], references: [id], onDelete: Restrict)
    subCategory          SubCategory?                @relation(fields: [subCatId], references: [id], onDelete: Restrict)
    approvedByAdmin      User?                       @relation("ListingApprovals", fields: [approvedByAdminId], references: [id], onDelete: SetNull)
    variants             ListingVariant[]
    content              ListingContent[]
    inclusionsExclusions ListingInclusionExclusion?
    addons               ListingAddon?
    media                ListingMedia[]
    faqs                 ListingFaq?
    slots                ListingSlot[]             
    slotChanges          ListingSlotChange[]      
    dateRanges           InventoryDateRange[]       
    blockedDates         InventoryBlockedDate[]      
    metadata             Json?                       @map("metadata")

    @@map("listings")
}
