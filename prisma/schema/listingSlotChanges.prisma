model ListingSlotChange {
    id            String      @id @default(uuid()) @map("change_id")
    slotId        String?      @map("slot_id")
    listingId     String      @map("listing_id")    
    variantId     String?     @map("variant_id")   
    changeDate    DateTime    @map("change_date")
    basePrice     Int         @map("base_price")
    availableCount Int        @map("available_count")
    bookedCount   Int         @map("booked_count")
    triggerType   TriggerType @map("trigger_type")
    createdAt     DateTime    @default(now()) @map("created_at")
    updatedAt     DateTime    @updatedAt @map("updated_at")

    slot    ListingSlot?      @relation(fields: [slotId], references: [id], onDelete: Cascade, name: "SlotToSlotChange")
    listing Listing          @relation(fields: [listingId], references: [id], onDelete: Cascade)
    variant ListingVariant?  @relation(fields: [variantId], references: [id], onDelete: Cascade)

    @@map("listing_slot_changes")
}