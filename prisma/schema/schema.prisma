generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Global Enums ---

enum UserType {
  customer
  operator
  admin
  super_admin
}

enum BookingFormat {
  F1
  F2
  F3
  F4
}

enum ListingStatus {
  draft
  pending_approval
  active
  rejected
  archived
}

enum ContentType {
  overview
  day_itinerary
  pickup_dropoff
  difficulty
  fitness
  things_to_carry
  faq
  why_choose_us
  safety_commitment
  how_to_reach
}

enum InclusionType {
  inclusion
  exclusion
}

enum MediaType {
  image
  video
}

enum PolicyType {
  cancellation
  rescheduling
  exchange
  terms_conditions
  why_choose_us
}

enum FieldType {
  text
  textarea
  number
  select
  multiselect
  boolean
  date
  time
  datetime
  json_array
}
